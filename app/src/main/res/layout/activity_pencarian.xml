<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".pencarian">

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/background_ungu" />

    <EditText
        android:id="@+id/editMapel"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:background="@drawable/edittext"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:hint="Bahasa Inggris"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editKota"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:background="@drawable/edittext"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:hint="Padang"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/editMapel"
        app:layout_constraintTop_toTopOf="@+id/editMapel" />

    <ImageButton
        android:id="@+id/buttonCari"
        android:layout_width="56dp"
        android:layout_height="39dp"
        android:background="#00FFFFFF"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/editKota"
        app:layout_constraintTop_toTopOf="@+id/editKota"
        app:srcCompat="@drawable/iconpencarian" />

    <Button
        android:id="@+id/map"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/ungu_muda"
        android:textColor="@color/black"
        android:text="Cari Guru Disekitarmu"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/editMapel"
        app:layout_constraintTop_toBottomOf="@+id/editMapel" />

    <TextView
        android:id="@+id/textView888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:text="Hasil Pencarian :"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"></TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="498dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView888">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pencarian"
            android:layout_width="382dp"
            android:layout_height="488dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="5dp"
            tools:listitem="@layout/activity_pencarian_item" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>