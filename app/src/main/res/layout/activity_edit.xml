<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".EditActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="608dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profil1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="516dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/EditEmailJennie"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/editprofil"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="jenniejane@example.com"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/EditPasswordJennie"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/editprofil"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="abcd12345"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editNamaJennie"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/editprofil"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Jennie Jane"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editNoHP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/EditNoHPJennie"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/editprofil"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="081234567891"
                    android:textColor="#000000" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editalamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editalamatuser"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/editprofil"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Padang, Sumatera Barat"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="22dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editlevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editleveluser"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/editprofil"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="kelas 10 SMA"
                    android:textColor="#000000" />
            </LinearLayout>
            <Button
                android:id="@+id/editSimpan"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/daftar"
                android:text="Simpan" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>